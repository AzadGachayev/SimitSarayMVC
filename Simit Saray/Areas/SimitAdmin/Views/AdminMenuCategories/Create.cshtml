@model Simit_Saray.Models.MenuCategory

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/SimitAdmin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create","AdminMenuCategories",FormMethod.Post,new {enctype="multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MenuCategory</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
         <div class="form-group">
        <label class="control-label">Kateqoriya adı</label>
