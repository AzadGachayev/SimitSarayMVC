        <div class="row justify-content-between">

            <div class="col-sm-12 col-md-5 order-2 order-sm-first">
                <div class="section_about__img">
                    <img style="height: 100%; object-fit: cover" src="@Model.Haqqinda.Photo" class="img-fluid" alt="...">
                </div>
            </div>

            <div class="col-sm-12 col-md-7 col-lg-7 col-xl-6 order-first order-sm-2">

                <!-- Navigation -->
                <nav class="nav nav_links d-flex">
                    <a class="nav-link animsition-link" href="@Url.Action("Index","Home")">Əsas səhifə</a>
                    <a class="nav-link animsition-link active" href="@Url.Action("About","Home")">Haqqımızda</a>
                    <a class="nav-link animsition-link" href="@Url.Action("Menyu","Home")">Menyu</a>
                    <a class="nav-link animsition-link" href="@Url.Action("Blog","Home")">Blog</a>
                    <a class="nav-link animsition-link" href="@Url.Action("Gallery","Home")">Qalereya</a>
                    <a class="nav-link animsition-link" href="@Url.Action("Contact","Home")">Əlaqə</a>
                </nav>

                <!-- Heading -->
                <h1 class="section__heading"> @Model.Haqqinda.Header</h1>


                <!-- Info -->
