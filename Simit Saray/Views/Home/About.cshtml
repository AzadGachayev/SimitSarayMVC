        </div> <!-- / .row -->

        <div class="row text-center">
            <div class="col">

                <h2 class="mb-0">Rezervasiya</h2>

            </div>
        </div> <!-- / .row -->
        <!-- Form -->
       @Html.Partial("Reservation")

        <div class="row text-center">
            <div class="col">

                <div class="modal_info__item">
                    <h4>İş Vaxtı</h4>
