@{
    ViewBag.Title = "Blog";
}
@using Simit_Saray.ViewModels
@model DefaultViewModel
@section MainCss{
    <link rel="stylesheet" href="~/Public/assets/plugins/iziModal/css/iziModal.min.css">
    <link rel="stylesheet" href="~/Public/assets/plugins/animsition/dist/css/animsition.min.css">

    <!-- CSS Global -->
    <!-- build:css assets/css/theme.min.css -->
    <link rel="stylesheet" href="~/Public/css/theme.css">
}
<!-- NAVBAR
    ================================================== -->
<nav class="navbar navbar-light">

    <div class="container">

        <span class="navbar-text order-2 order-sm-first"> </span>


        <a class="nav-link order-12" data-izimodal-open="#modal" data-izimodal-transitionin="fadeInRight" href="#">Rezervasiya</a>

    </div> <!-- / .container -->

</nav>

<!-- MODAL RESERVATION
================================================== -->

<div id="modal" class="iziModal mainPage">
    <div class="container">

        <div class="row text-right">
            <div class="col">

                <a class="btn mt-3" href="#" data-izimodal-close="" data-izimodal-transitionout="fadeOutRight">
                    Bağla
                </a>

            </div>
        </div> <!-- / .row -->

        <div class="row text-center">
            <div class="col">

                <h2 class="mb-0">Rezervasiya</h2>

            </div>
        </div> <!-- / .row -->
        <!-- Form -->
       @Html.Partial("Reservation")

        <div class="row text-center">
            <div class="col">

                <div class="modal_info__item">
                    <h4>İş Vaxtı</h4>
                    <p>Həftənin bütün günləri</p>
                    <p>08:00 - 01:00</p>
                </div>

                <div class="modal_info__item">
                    <h4>Simit Saray sosialda</h4>

                    <!-- Social icons -->
                    <ul class="social__list">
                        <li><a href="https://twitter.com/simitsarayi"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="https://www.facebook.com/Simit-Sarayı-Baku-467592887378361/"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="https://www.instagram.com/simitsarayibaku/"><i class="fab fa-instagram"></i></a></li>
                        <li><a href="https://foursquare.com/v/simit-sarayi-baku/56daab7d498e2749a6934f62"><i class="fab fa-foursquare"></i></a></li>
                    </ul> <!-- .social__list -->
                </div>

            </div>
        </div> <!-- / .row -->

    </div> <!-- / .container -->
    
</div> <!-- #modal -->
<!-- BLOG
================================================== -->
<section class="section section_blog">

    <div class="container">
        <div class="row justify-content-between">

            <div class="col-sm-12 col-md-5 order-2 order-sm-first">
                <div class="section_blog__img">

                    <img style="height:100%; object-fit:cover;" src="~/Public/Uploads/magazinebg.jpg" class="img-fluid" alt="...">
                </div>
            </div>

            <div class="col-sm-12 col-md-7 col-lg-7 col-xl-6 order-first order-sm-2">
                <!-- Navigation -->
                <nav class="nav nav_links d-flex">
                    <a class="nav-link animsition-link" href="@Url.Action("Index","Home")">Əsas səhifə</a>
                    <a class="nav-link animsition-link" href="@Url.Action("About","Home")">Haqqımızda</a>
                    <a class="nav-link animsition-link" href="@Url.Action("Menyu","Home")">Menyu</a>
                    <a class="nav-link animsition-link active" href="@Url.Action("Blog","Home")">Bloq</a>
                    <a class="nav-link animsition-link" href="@Url.Action("Gallery","Home")">Qalereya</a>
                    <a class="nav-link animsition-link" href="@Url.Action("Contact","Home")">Əlaqə</a>
                </nav>
                <!-- Heading -->
                <h1 class="section__heading">Ən Son Yeniliklər</h1>

                <!-- blog list -->
                @foreach (var item in Model.BloqSehife)
                {
                    <div class="section_blog__item">

                        <ul class="blog_info">
                            <li><a href="#">@item.CreateDate.ToString("dd MMMM yyyy")</a></li>
                            <li>/</li>
                            @*<li><a href="#">Food</a></li>
                            <li>/</li>*@
                            <li><a href="#">@item.AuthorName</a></li>
                        </ul>

                        <a href="@Url.Action("BlogItem","Home",new { id=item.GenerateSlug()})" class="blog_title animsition-link">
                            <h4 data-hover="@item.Header">@item.Header</h4>
                        </a>
                        
                        <p class="blog_desc">
                            @if (item.Description.Length > 150 && item.Description.Length!=0)
                            {
                                @item.Description.Substring(0, 150) <a href="@Url.Action("BlogItem","Home",new { id=item.GenerateSlug()})">[...]</a>

                            }
                            else
                            {
                                @item.Description

                            }

                        </p>
                    </div> <!-- .section_blog__item -->
                }


     


            </div>
        </div> <!-- / .row -->
    </div> <!-- .container -->

</section> <!-- .section_blog -->
<!-- NEWSLETTER
================================================== -->
<section class="section section_newsletter">

    <div class="container">
        <div class="row justify-content-center">

            <div class="col-sm-12 col-md-8 col-lg-6">

                <h2 class="mb-0">Bülleten</h2>
                <p class="mb-5">
                    Ən son xəbərlər, kampaniyalar və yeniliklərdən xəbərdar olmaq üçün abunə olun.
                    <!-- Form -->
                    <div id="mc_embed_signup">
                        <form class="section_newsletter__form validate" action="https://themeforest.us16.list-manage.com/subscribe/post-json?u=3c9679e26b601e1a87122b12f&amp;id=e4b9351526&amp;c=?" method="get" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank" novalidate="">
                            <div id="mc_embed_signup_scroll" class="row">
                                <div class="mc-field-group form-group col-md-9">
                                    <label for="mce-EMAIL" class="sr-only">E-mail address</label>
                                    <input type="email" value="" name="EMAIL" class="required email form-control" id="mce-EMAIL" placeholder="Elektron poçt ünvanı">
                                </div>
                                <div id="mce-responses" class="clear">
                                    <div class="response"></div>
                                    <div class="response" id="mce-success-response"></div>
                                </div>
                                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                <div aria-hidden="true" id="mce-hidden-input">
                                    <input type="text" name="b_507744bbfd1cc2879036c7780_4523d25e1b" tabindex="-1" value="">
                                </div>
                                <div class="clear col-md-3 text-center">
                                    <button type="submit" class="btn" id="mc-embedded-subscribe">
                                        Abunə ol
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div> <!-- #mc_embed_signup -->

            </div>

        </div> <!-- / .row -->
    </div> <!-- .container -->
</section>

@section MainJs{

    <!-- JS Plugins -->
    <script src="~/Public/assets/plugins/iziModal/js/iziModal.min.js"></script>
    <script src="~/Public/assets/plugins/reservation/reservation.js"></script>
    <script src="~/Public/assets/plugins/alerts/alerts.js"></script>
    <script src="~/Public/assets/plugins/animsition/dist/js/animsition.min.js"></script>

    <!-- JS Custom -->
    <!-- build:js assets/js/theme.min.js -->
    <script src="~/Public/assets/js/theme.js"></script>
    <!-- endbuild -->
    <script src="~/Public/assets/js/custom.js"></script>

}