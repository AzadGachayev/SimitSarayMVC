                        })();
                    </script>
                    <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

                </div> <!-- .comments -->
            </div>
        </div> <!-- / .row -->

  

        <div class="row text-center">
            <div class="col">

                <a href="@Url.Action("Blog","Home")" class="btn animsition-link">
                    <h4 class="mb-0 mt-5">Xəbər listinə geri dön</h4>
                </a>

            </div>
        </div> <!-- / .row -->

    </div> <!-- .container -->

</section> <!-- .section_blog-item -->
@section MainJs{

    <!-- JS Plugins -->
    <script src="~/Public/assets/plugins/iziModal/js/iziModal.min.js"></script>
    <script src="~/Public/assets/plugins/reservation/reservation.js"></script>
    <script src="~/Public/assets/plugins/alerts/alerts.js"></script>
    <script src="~/Public/assets/plugins/animsition/dist/js/animsition.min.js"></script>

    <!-- JS Custom -->
    <!-- build:js assets/js/theme.min.js -->
    <script src="~/Public/assets/js/theme.js"></script>
    <!-- endbuild -->
    <script src="~/Public/assets/js/custom.js"></script>

    <!-- Google maps -->
