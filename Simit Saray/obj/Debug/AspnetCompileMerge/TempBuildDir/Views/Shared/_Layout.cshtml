<body>

    <header class="cd-header">
        <div class="header-wrapper">
            <div class="logo-wrap">
                <a href="@Url.Action("","")" class="hover-target"><img src="@Model.homeHeader.Logo"></a>
            </div>
            @RenderSection("navMenu", required: false)
        </div>
    </header>

    <div class="mainNav nav" style="--my-background:linear-gradient(to bottom, rgba(92, 77, 66, 0.8) 0, rgba(92, 77, 66, 0.8) 100%), url(@Model.NavBackground.BackgroundImage) no-repeat center center/ cover">
        <div class="nav__content">
            <ul class="nav__list">

                <li class="nav__list-item"><a href="@Url.Action("Index","Home")" class="hover-target">Ana Səhifə</a></li>
                <li class="nav__list-item"><a href="@Url.Action("Menyu","Home")" class="hover-target">Menyu</a></li>
                <li class="nav__list-item"><a href="@Url.Action("Blog","Home")" class="hover-target">Xəbərlər</a></li>
                <li class="nav__list-item"><a href="@Url.Action("Gallery","Home")" class="hover-target">Qalereya</a></li>
                <li class="nav__list-item"><a href="@Url.Action("About","Home")" class="hover-target">Haqqımızda</a></li>
                <li class="nav__list-item"><a href="@Url.Action("Contact","Home")" class="hover-target">Əlaqə</a></li>

            </ul>
        </div>
    </div>
    <div class='cursor' id="cursor"></div>
    <div class='cursor2' id="cursor2"></div>
    <div class='cursor3' id="cursor3"></div>
    @RenderBody()
    <footer class="section_footer">
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-4">
                    <p>© @DateTime.Now.Year Simit Sarayı Bakı. Bütün hüquqlar qorunur.</p>

                </div>
                <div class="col-12 col-md-4 d-flex justify-content-around">

                    <a href="https://www.facebook.com/azad.gachayev"><span>Created by Azad Gachayev</span></a>


                </div>
                <div class="col-12 col-md-4 ">
                    <!-- Social icons -->
                    <ul class="social__list">
                        <li><a href="https://twitter.com/simitsarayi"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="https://www.facebook.com/Simit-Sarayı-Baku-467592887378361/"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="https://www.instagram.com/simitsarayibaku/"><i class="fab fa-instagram"></i></a></li>
                        <li><a href="https://foursquare.com/v/simit-sarayi-baku/56daab7d498e2749a6934f62"><i class="fab fa-foursquare"></i></a></li>

                    </ul>


                </div>
            </div> <!-- / .row -->
        </div>
    </footer> <!-- .section_footer -->



    <script src="~/public/vendors/js/jquery-3.4.1.js"></script>
    <script src="~/public/vendors/js/bootstrap.js"></script>
    <script src="~/public/Vendors/owlcarousel/js/owl.carousel.js"></script>


