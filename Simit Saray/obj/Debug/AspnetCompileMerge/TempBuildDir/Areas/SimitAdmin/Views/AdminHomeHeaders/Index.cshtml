@model IEnumerable<Simit_Saray.Models.HomeHeader>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/SimitAdmin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Əsas Səhifə</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Head)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Logo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BackgroundImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Head)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td style="width: 25%">
        <img src="@item.Logo" class="img-thumbnail" alt="Simit Logo" />
    </td>
   
    <td style="width: 25%">
        <img src="@item.BackgroundImage" class="img-thumbnail" alt="Alternate Text" />
    </td>
    
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) 
    </td>
</tr>
}

</table>
