
@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Simit_Saray.ViewModels
@model DefaultViewModel
@section MainCss{
    <link rel="stylesheet" href="~/Public/assets/plugins/iziModal/css/iziModal.min.css">
    <link rel="stylesheet" href="~/Public/assets/plugins/animsition/dist/css/animsition.min.css">
    <link rel="stylesheet" href="~/public/assets/plugins/flickity/flickity.min.css">
    <link rel="stylesheet" href="~/public/assets/plugins/lightbox/css/lightbox.min.css">
    <!-- CSS Global -->
    <!-- build:css assets/css/theme.min.css -->
    <link rel="stylesheet" href="~/Public/css/theme.css">
}
<!-- NAVBAR
      ================================================== -->
<nav class="navbar navbar-light">

    <div class="container">

        <span class="navbar-text order-2 order-md-first"></span>



        </a>

        <a class="nav-link order-12" data-izimodal-open="#modal" data-izimodal-transitionin="fadeInRight" href="#">Rezervasiya</a>

    </div> <!-- / .container -->

</nav>

<!-- MODAL RESERVATION
================================================== -->

<div id="modal" class="iziModal mainPage">
    <div class="container">

        <div class="row text-right">
            <div class="col">

                <a class="btn mt-3" href="#" data-izimodal-close="" data-izimodal-transitionout="fadeOutRight">
                    Bağla
                </a>

            </div>
        </div> <!-- / .row -->

        <div class="row text-center">
            <div class="col">

                <h2 class="mb-0">Rezervasiya</h2>

            </div>
        </div> <!-- / .row -->
       @Html.Partial("Reservation")

        <div class="row text-center">
            <div class="col">

                <div class="modal_info__item">
                    <h4>İş Vaxtı</h4>
                    <p>Həftənin bütün günləri</p>
                    <p>08:00 - 01:00</p>
                </div>

                <div class="modal_info__item">
                    <h4>Simit Saray sosialda</h4>

                    <!-- Social icons -->
                    <ul class="social__list">
                        <li><a href="https://twitter.com/simitsarayi"><i class="fab fa-twitter"></i></a></li>
                        <li><a href="https://www.facebook.com/Simit-Sarayı-Baku-467592887378361/"><i class="fab fa-facebook-f"></i></a></li>
                        <li><a href="https://www.instagram.com/simitsarayibaku/"><i class="fab fa-instagram"></i></a></li>
                        <li><a href="https://foursquare.com/v/simit-sarayi-baku/56daab7d498e2749a6934f62"><i class="fab fa-foursquare"></i></a></li>
                    </ul> <!-- .social__list -->
                </div>

            </div>
        </div> <!-- / .row -->

    </div> <!-- / .container -->

</div> <!-- #modal -->
<!-- GALLERY
================================================== -->
<section class="section section_gallery">

    <div class="container">
        <div class="row justify-content-between">

            <div class="col-12 col-md-5 order-2 order-md-1">

                <!-- Carousel -->
                <div class="section_gallery_carousel">
                    @foreach (var item in Model.Qalereya2)
                    {
                        <div class="section_gallery_carousel_item">
                            <img src="@item.Photo" class="img-fluid" alt="...">
                        </div>

                    }
                 
                </div> <!-- .section_gallery_carousel -->

            </div>

            <div class="col-sm-12 col-md-7 col-lg-7 col-xl-6 order-md-1">

                <!-- Navigation -->
                <nav class="nav nav_links d-flex">
                    <a class="nav-link animsition-link" href="@Url.Action("Index","Home")">Əsas səhifə</a>
                    <a class="nav-link animsition-link" href="@Url.Action("About","Home")">Haqqımızda</a>
                    <a class="nav-link animsition-link" href="@Url.Action("Menyu","Home")">Menyu</a>
                    <a class="nav-link animsition-link" href="@Url.Action("Blog","Home")">Bloq</a>
                    <a class="nav-link animsition-link active" href="@Url.Action("Gallery","Home")">Qalereya</a>
                    <a class="nav-link animsition-link" href="@Url.Action("Contact","Home")">Əlaqə</a>
                </nav>
                @foreach (var item in Model.Qalereya)
                {
                    <!-- Heading -->
                    <h1 class="section__heading">@item.Header</h1>
                }

                @foreach (var item in Model.Qalereya)
                {
                    <!-- Info -->
                    <p>@item.Description</p>

                }


            </div>
        </div> <!-- / .row -->
    </div> <!-- .container -->

</section> <!-- .section_gallery -->
<!-- Interior
================================================== -->
<section class="section section_interior">

    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="text-center">İnteryer</h2>
            </div>
        </div>
        <div class="row section_interior_grid">
            @foreach (var item in Model.Qalereya2)
            {
                <div class="col-xs-6 col-sm-4 section_interior_grid_item">
                    <a href="@item.Photo" data-lightbox="gallery">
                        <img src="@item.Photo" class="img-fluid" alt="...">
                    </a>
                </div>
            }

  
        </div> <!-- .row -->
    </div> <!-- .container -->

</section> <!-- .section_interior -->
@section MainJs{
    <!-- JS Plugins -->
    <script src="~/Public/assets/plugins/iziModal/js/iziModal.min.js"></script>
    <script src="~/Public/assets/plugins/alerts/alerts.js"></script>
    <script src="~/Public/assets/plugins/animsition/dist/js/animsition.min.js"></script>
    <script src="~/public/assets/plugins/flickity/flickity.pkgd.min.js"></script>
    <script src="~/public/assets/plugins/isotope/lib/imagesloaded.pkgd.min.js"></script>
    <script src="~/public/assets/plugins/isotope/isotope.pkgd.min.js"></script>
    <script src="~/public/assets/plugins/lightbox/js/lightbox.min.js"></script>


    <!-- JS Custom -->
    <!-- build:js assets/js/theme.min.js -->
    <script src="~/Public/assets/js/theme.js"></script>
    <script src="~/public/assets/js/google_maps.js"></script>

    <!-- endbuild -->
    <script src="~/Public/assets/js/custom.js"></script>
}
