            <input type="file" name="Photo" class="form-control" />
            @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"><b><i>Arxa fonu seç</i></b></label>
