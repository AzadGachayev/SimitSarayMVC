<!-- MENU
           ================================================== -->
<section id="menyu">
    <section class="section section_menu">
        <!-- Heading -->
        <h1 class="section__heading text-center pt-5">Menyu</h1>
        <div class="container">
            <div class="owl-carousel owl-theme mt-5">

                @{ var count = 0; }
                @foreach (var item in Model.KateqoriyaMenyu)
                {
                    count++;
                    if (count % 2 != 0)
                    {
                        <div class="row justify-content-between section_menu__body">

                            <div class="col-sm-12 col-md-5 order-2 order-sm-first">
                                <div class="section_menu__img" style="height:100%">
                                    <img style="height: 100%; object-fit: cover" src="@item.CategoryPhoto" class="img-fluid" alt="...">
                                </div>
                            </div>

                            <div class="col-sm-12 col-md-7 col-lg-7 col-xl-6 order-first order-sm-2">


                                <!-- Heading -->
                                <h1 class="section__heading mb-0">@item.CategoryName</h1>

                                <!-- Devider Line -->
                                <div class="divider_line"></div>

                                <div class="row">

                                    @foreach (var menuitem in item.Menyu)
                                    {
                                        <div class="col-sm-12 col-md-6 dish_body">
                                            <div class="dish_body__name" style="display:flex;align-items:center;justify-content:space-between">
                                                <h5 style="flex:2;margin:0 4px;">@menuitem.Name </h5><span style="flex:1;text-align:right">@menuitem.Price AZN</span>
                                            </div>
                                            <div class="dish_body__desc text-italic">
                                                @menuitem.Ingridient
                                            </div>
                                        </div> <!-- .dish_body -->
                                    }



                                </div> <!-- / .row -->

                            </div>
                        </div> <!-- / .row -->


                    }

                    else
                    {

                        <div class="row justify-content-between section_menu__body">

                            <div class="col-sm-12 col-md-7 col-lg-7 col-xl-6">

                                <!-- Heading -->
                                <h1 class="section__heading mb-0">@item.CategoryName</h1>

                                <!-- Devider Line -->
                                <div class="divider_line"></div>

                                <div class="row">
                                    @foreach (var menuitem in item.Menyu)
                                    {
                                        <div class="col-sm-12 col-md-6 dish_body">
                                            <div class="dish_body__name" style="display:flex;align-items:center;justify-content:space-between">
                                                <h5 style="flex:2;margin:0 4px;">@menuitem.Name </h5><span style="flex:1;text-align:right">@menuitem.Price AZN</span>
                                            </div>
                                            <div class="dish_body__desc text-italic">
                                                @menuitem.Ingridient
                                            </div>
                                        </div> <!-- .dish_body -->
                                    }


                                </div> <!-- / .row -->

                            </div>
                            <div class="col-sm-12 col-md-5 order-2 order-sm-first">
                                <div class="section_menu__img" style="height:100%">
                                    <img style="height: 100%; object-fit: cover" src="@item.CategoryPhoto" class="img-fluid" alt="...">
                                </div>
                            </div>
                        </div> <!-- / .row -->

                    }




                }




            </div>

        </div> <!-- .container -->

    </section> <!-- .section_menu -->
</section>



