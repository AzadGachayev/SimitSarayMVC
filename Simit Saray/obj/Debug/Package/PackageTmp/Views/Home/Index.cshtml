<section id="welcome" style="

    background: linear-gradient(to bottom, rgba(92, 77, 66, 0.8) 0, rgba(92, 77, 66, 0.8) 100%), url(@Model.homeHeader.BackgroundImage) fixed no-repeat center center/ cover">
